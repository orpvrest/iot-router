COMPOSE_PROJECT_NAME=iot-router
TZ=UTC

# VPN / PKI
VPN_SERVER_CN=vpn.example.com
VPN_ORG="IoT Router"
VPN_EMAIL=ops@example.com
VPN_NETWORK=10.8.0.0
VPN_NETMASK=255.255.255.0
VPN_PUBLIC_ENDPOINT=vpn.example.com
VPN_SNI_DOMAIN=vpn.example.com
SITE_SNI_DOMAIN=monitor.example.com
OPENVPN_TCP_PORT=1194
OPENVPN_UDP_PORT=1194
OPENVPN_LOCAL_PORT=1194
EDGE_TLS_PORT=443
STUNNEL_ACCEPT_PORT=8443
CERTBOT_CERT_NAME=vpn.example.com
VPN_DNS=1.1.1.1,8.8.8.8
VPN_PUSH_ROUTES=
VPN_STATIC_CLIENTS=
# Format: client1:10.8.0.10,client2:10.8.0.11 (optional static leases)
VPN_FORWARD_TCP=
# Format: label:public_port:client_name:client_port (comma separated). Requires static IP.
# Example: VPN_FORWARD_TCP=ssh-admin:2222:core-admin:22,vnc-lab:25900:lab-view:5900
DEFAULT_CLIENTS=core-admin
VPN_MANAGEMENT_HOST=127.0.0.1
VPN_MANAGEMENT_PORT=5555
FORWARD_TCP_RANGE_PRIMARY=20020-20039
FORWARD_TCP_RANGE_SECONDARY=20060-20079
OPENVPN_NAT_INTERFACE=ens1
OPENVPN_ENABLE_NAT=true
ENABLE_IP_FORWARD=true
STUNNEL_FORWARD_HOST=host.docker.internal
OPENVPN_FORWARD_HOST=host.docker.internal

# Monitoring
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_USER=admin
# NOTE: change immediately in production
GRAFANA_ADMIN_PASSWORD="ChangeMeNow!42"

# Certificates / ACME
LE_EMAIL=ops@example.com
ACME_STAGING=true
